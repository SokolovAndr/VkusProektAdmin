<Window x:Class="VkusProektAdmin.AdministrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VkusProektAdmin"
        mc:Ignorable="d"
        Title="AdministrationWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <DataGrid x:Name="DataGridTest" FontSize="16" FontWeight="Bold" Margin="10" AutoGenerateColumns="False">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Path=Id}" IsReadOnly ="True" Header="Id" Width="50" />
            <DataGridTextColumn Binding="{Binding Path = Login}" IsReadOnly ="False" Header="Login" Width="100" />
            <DataGridTextColumn Binding="{Binding Path=Password}" IsReadOnly ="False"  Header="Password" Width="*" />
        </DataGrid.Columns>
    </DataGrid>
</Window>
